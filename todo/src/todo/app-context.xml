<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" 
          "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>
  <!--инициализация общего фрейма-->
  <bean id="mainFrame" class="todo.ui.MainFrame" init-method="init">
    <property name="contentPane">
      <ref bean="mainPanel"/>
    </property>
    <property name="title">
      <value>Sample ToDo List</value>
    </property>
  </bean>
  <!--инициализация 2-х панелей для этого фрейма-->
  <bean id="mainPanel" class="todo.ui.BoxLayoutPanel"
        init-method="init">
    <property name="axis">
      <value>1</value>
    </property>
    <property name="panelComponents">
      <list>
        <ref bean="itemScrollPane"/>
        <ref bean="buttonPanel"/>
      </list>
    </property>
  </bean>
  <bean id="itemScrollPane" class="javax.swing.JScrollPane">
    <!--JScrollPane - в нём отображается сама таблица, в него передаём itemTable-->
    <constructor-arg>
      <ref bean="itemTable"/>
    </constructor-arg>
  </bean>
  <!--инициализация таблици которая будет находиться в первой панели-->
  <bean id="itemTable" class="javax.swing.JTable">
    <!-- объект в котором показываються записи по заметкам-->
    <property name="model">
      <ref bean="itemTableModel"/>
    </property>
  </bean>
  <!--получение данных для таблицы-->
  <bean id="itemTableModel" class="todo.ui.ItemTableModel">
    <!--объект модели данных которые мы передаём в компонент -->
    <property name="itemList">
      <ref bean="itemList"/>
    </property>
  </bean>
  <!--инициализации списка для данных для таблицы-->
  <bean id="itemList" class="java.util.ArrayList">
    <constructor-arg>
      <list>
        <value>Строка  1</value>
        <value>Привет</value>
        <value>Swing</value>
      </list>
    </constructor-arg>
  </bean>
  <!--инициализаци панели с кнопками-->
  <bean id="buttonPanel" class=
     "todo.ui.BoxLayoutPanel" init-method="init">
    <property name="axis">
      <!--  "0" corresponds to BoxLayout.X_AXIS -->
      <value>0</value>
    </property>
    <property name="panelComponents">
      <list>
        <ref bean="deleteButton"/>
        <ref bean="addNewButton"/>
      </list>
    </property>
  </bean>
  <bean id="deleteButton" class="todo.ui.button.ActionListenerButton"
        init-method="init">
    <property name="actionListener">
      <ref bean="deleteButtonActionListener"/>
    </property>
    <property name="text">
      <value>Удалить строку</value>
    </property>
  </bean>
  <!--слушает нажатие клавиши-->
  <bean id="deleteButtonActionListener"
        class="todo.ui.button.DeleteButtonActionListener">
    <property name="list">
      <ref bean="itemList"/>
    </property>
    <property name="table">
      <ref bean="itemTable"/>
    </property>
  </bean>
  <bean id="addNewButton" class="todo.ui.button.ActionListenerButton"
        init-method="init">
    <property name="actionListener">
      <ref bean="addNewButtonActionListener"/>
    </property>
    <property name="text">
      <value>Добавить строку</value>
    </property>
  </bean>
  <!--слушает нажатие клавиши-->
  <bean id="addNewButtonActionListener"
        class="todo.ui.button.AddNewButtonActionListener">
    <property name="list">
      <ref bean="itemList"/>
    </property>
    <property name="table">
      <ref bean="itemTable"/>
    </property>
  </bean>
</beans>